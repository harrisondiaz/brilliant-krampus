---
import "@fontsource-variable/truculenta";
import { Image } from "astro:assets";
---

<div class="h-screen w-full">
  <div class="h-full w-full flex items-center justify-center">
    <div class="h-full w-full">
      <form
        action="src\api\auth\signin.ts"
        method="post"
        class="flex flex-col hover:blur-0 h-full bg-center bg-cover items-center justify-center w-full gap-4 bg-gradient-to-tr from-sky-700 to-skye-500"
      >
        <img
          class="w-64"
          src="https://ggbralugqoodmaklkses.supabase.co/storage/v1/object/sign/public%20images/logo2.png?token=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1cmwiOiJwdWJsaWMgaW1hZ2VzL2xvZ28yLnBuZyIsImlhdCI6MTcxMTIzNzY5OSwiZXhwIjoyMzQyMzg5Njk5fQ.mgLjjuGhPh7mHl2lEEn7YoEVlLH7Zh_QKFmP7KuQORI&t=2024-03-23T23%3A48%3A20.517Z"
          alt="Logo del local"
        />
        <h1 class="my-6 fonting text-6xl text-white">Parceritos Baby</h1>
        <input
          type="email"
          name="email"
          id="email"
          class="bg-white/50 hover:bg-white md:bg-white placeholder:text-sky-500 placeholder:text-sm text-blue-500 py-3 px-5 focus:text-sky-500 focus:outline focus:outline-offset-1 focus:outline-sky-500 rounded-md"
          placeholder="¡Ingresa tu correo aquí!"
        />
        <input
          type="password"
          name="password"
          id="password"
          class="bg-white/50 hover:bg-white md:bg-white placeholder:text-sky-500 placeholder:text-sm text-sky-500 py-3 px-5 focus:text-sky-500 focus:outline focus:outline-offset-1 focus:outline-sky-500 rounded-md"
          placeholder="¡Y tu contraseña aquí!"
        />

        <button
          class="px-6 py-2 bg-lime-500 rounded hover:bg-white hover:text-lime-700 font-semibold transition-all text-white hover:scale-110"
        >
          Ingresar
        </button>
      </form>
    </div>
  </div>
</div>

<style>
  .fonting {
    font-family: "Truculenta Variable";
  }
</style>
